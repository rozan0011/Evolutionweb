{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "lib": [ "ESNext", "DOM" ],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./", 
    "moduleResolution": "node"
  },
  "include": [ "src/**/*", "api/**/*" ], 
  "exclude": [ "node_modules" ]
}