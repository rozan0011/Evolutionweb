{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": [ "ESNext", "DOM" ],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./",
    "moduleResolution": "node" // Ensure module resolution is set to node
  },
  "include": [ "src/**/*", "api/**/*" ],
  "exclude": [ "node_modules" ]
}